<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="6dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_goals_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/image_view_goals"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/places_togo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_goal_title"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_goals_container"
            android:layout_toEndOf="@id/card_view_goals_container"
            android:textSize="16sp"
            tools:text="Becoming a full-time Android Dev" />

        <TextView
            android:id="@+id/text_view_goal_desc"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_goal_title"
            android:layout_toEndOf="@id/card_view_goals_container"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            tools:text="I am learning Android Development to become a full-fledged Android Developer by 2025" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>